{
  "name": "8bitbot",
  "version": "1.0.0",
  "description": "8BitBot",
  "license": "MIT",
  "keywords": [
    "bittorrent",
    "hls",
    "hlsjs",
    "mse",
    "p2p",
    "peer-to-peer",
    "torrent",
    "video",
    "webrtc",
    "webtorrent"
  ],
  "target": "web",
  "bundleDependencies": false,
  "main": "./src/index.js",
  "browser": "./src/index.js",
  "scripts": {
    "start": "snowpack dev",
    "depends": "make -C tools",
    "depends-checkout": "make -C tools checkout",
    "depends-build": "make -C tools build",
    "depends-install": "make -C tools install",
    "prebuild": "([ -f src/generated/opencv.js ] || npm run depends) && (patch -p1 --forward < tools/patches/0001-Unexpected-token-building-libp2p.patch || true)",
    "build": "snowpack build",
    "bundle:*": "@snowpack/plugin-webpack",
    "audit": "audit-ci --moderate --package-manager npm",
    "pretest": "npm run lint",
    "test": "ts-mocha --require esm --require jsdom-global/register",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "clean": "node clean.js"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.1.0"
  },
  "devDependencies": {
    "@snowpack/plugin-babel": ">=1.4.0",
    "@snowpack/plugin-webpack": ">=1.4.0",
    "audit-ci": ">=3.1.0",
    "chai": ">=4.2.0",
    "esm": ">=3.2.25",
    "jsdom-global": ">=3.0.2",
    "lerna": ">=3.22.1",
    "mocha": ">=8.0.1",
    "prettier": ">=2.0.0",
    "rollup-plugin-node-globals": ">=1.4.0",
    "rollup-plugin-node-polyfills": ">=0.2.1",
    "snowpack": ">=2.6.0",
    "ts-mocha": ">=7.0.0",
    "typescript": "^3.9.6"
  },
  "dependencies": {
    "hls.js": "^0.13.2",
    "ipfs": "^0.47.0",
    "orbit-db": "^0.24.2",
    "webtorrent": "^0.108.6"
  },
  "chromeapp": {
    "fs-chunk-store": "memory-chunk-store",
    "http": "http-node",
    "load-ip-set": false,
    "net": "chrome-net",
    "os": false
  }
}
