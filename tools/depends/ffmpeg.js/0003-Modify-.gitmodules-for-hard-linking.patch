 	ignore = dirty
 [submodule "build/opus"]
 	path = build/opus
-	url = https://github.com/xiph/opus.git
+	url = @REPO_DIR_FFMPEG_JS@/build/opus
 	ignore = dirty
 [submodule "build/lame"]
