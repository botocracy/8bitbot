-	url = https://github.com/Kagami/lame-svn.git
+	url = @REPO_DIR_FFMPEG_JS@/build/lame
 	ignore = dirty
 [submodule "build/x264"]
 	path = build/x264
-	url = https://code.videolan.org/videolan/x264.git
+	url = @REPO_DIR_FFMPEG_JS@/build/x264
 	ignore = dirty
 [submodule "build/ffmpeg-webm"]
 	path = build/ffmpeg-webm
-	url = https://git.ffmpeg.org/ffmpeg.git
+	url = @REPO_DIR_FFMPEG_JS@/build/ffmpeg-webm
 	ignore = dirty
 [submodule "build/ffmpeg-mp4"]
 	path = build/ffmpeg-mp4
